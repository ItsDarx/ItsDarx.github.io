<%- include ("partials/_header") %>

<CEnter><div class="container mt-5">
    <h6>EDITAR FORMULARIO PROVEEDOR</h6>
    <div class="row">
            <div class="card">
                <div class="car-body">
                    <form action="/update/<%= data.id %>"" method="post">
                        <div class="form-group" >
                            <input type="text" name="name" placeholder="NOMBRE" value="<%= data.name %>" class="form-control">
                        </div>
                        <br>
                        <div class="form-group" >
                            <input type="text" name="address" placeholder="DIRECCIÓN" value="<%= data.address %>" class="form-control">
                        </div>
                        <br>
                        <div class="form-group" >
                            <input type="text" name="phone" placeholder="TELÉFONO" value="<%= data.phone %>" class="form-control">
                        </div>
                        <br>
                        <div class="form-group" >
                            <input type="text" name="mail" placeholder="CORREO ELECTRÓNICO" value="<%= data.mail %>" class="form-control">
                        </div>
                        <br>
                        <button type="submit" class="btn btn-dark"> EDITAR PROVEEDOR </button>
                    </form>
                </div>
            </div>
        
    </div>

</div></CEnter>

<%- include ("partials/_footer") %>
